<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Life Story Lines"
        android:id="@+id/textView7" android:layout_row="0" android:layout_column="0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Show Life Story Lines"
        android:id="@+id/textView8" android:layout_row="1" android:layout_column="0"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray" android:layout_row="2"
        android:layout_column="0" android:layout_columnSpan="3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Family Tree Lines"
        android:id="@+id/textView9" android:layout_row="3" android:layout_column="0"/>
    <Spinner android:layout_width="116dp" android:layout_height="wrap_content"
             android:spinnerMode="dropdown" android:id="@+id/familyTreeSpinner" android:layout_row="3"
             android:layout_column="1" android:layout_rowSpan="2"/>
    <Switch android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/familyTreeToggle" android:layout_row="3" android:layout_column="2"
            android:layout_gravity="center" android:layout_rowSpan="2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView10" android:layout_row="4" android:layout_column="0"/>
    <View
        android:layout_columnSpan="3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray" android:layout_row="5"
        android:layout_column="0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Spouse Lines"
        android:id="@+id/textView11" android:layout_row="6" android:layout_column="0"/>
    <Spinner android:layout_width="116dp" android:layout_height="wrap_content"
             android:spinnerMode="dropdown" android:id="@+id/spouseLinesSpinner" android:layout_row="6"
             android:layout_column="1" android:layout_rowSpan="2"/>
    <Switch android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/spouseLinesToggle" android:layout_row="6" android:layout_column="2"
            android:layout_gravity="center" android:checked="false"
            android:layout_rowSpan="2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView12" android:layout_row="7" android:layout_column="0"/>
    <View
        android:layout_columnSpan="3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray" android:layout_row="8"
        android:layout_column="0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Map Type"
        android:id="@+id/textView13" android:layout_row="9" android:layout_column="0"/>
    <Spinner android:layout_width="116dp" android:layout_height="wrap_content"
             android:spinnerMode="dropdown" android:id="@+id/mapTypeToggle" android:layout_row="9"
             android:layout_column="2" android:layout_rowSpan="2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView14" android:layout_row="10" android:layout_column="0"/>
    <View
        android:layout_columnSpan="3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray" android:layout_row="11"
        android:layout_column="0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Re-sync Data"
        android:id="@+id/textView15" android:layout_row="12" android:layout_column="0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView16" android:layout_row="13" android:layout_column="0"/>
    <View
        android:layout_columnSpan="3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray" android:layout_row="14"
        android:layout_column="0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Logout"
        android:id="@+id/textView17" android:layout_row="15" android:layout_column="0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView18" android:layout_row="16" android:layout_column="0"/>
    <Spinner
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:id="@+id/lifeStorySpinner" android:layout_row="0" android:layout_column="1"
        android:layout_rowSpan="2"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lifeStoryToggle" android:layout_row="0" android:layout_column="2"
        android:layout_gravity="center" android:layout_rowSpan="2"/>
</GridLayout>